<UserControl x:Class="ProgressoExpert.Controls.App.RightBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <Button Content="C" Name="SimpleCalculatorBtn" Style="{StaticResource MaterialDesignFlatButton}" Click="SimpleCalculatorBtn_Click"/>
                <Button Content="CCA" Name="AnnCreditCalculatorBtn" Style="{StaticResource MaterialDesignFlatButton}" Click="AnnCreditCalculatorBtn_Click"/>
                <Button Content="СС" Name="CreditCalculatorBtn" Style="{StaticResource MaterialDesignFlatButton}" Click="CreditCalculatorBtn_Click"/>
                <Button Content="Dc" Name="DepositCalculatorBtn" Style="{StaticResource MaterialDesignFlatButton}" Click="DepositCalculatorBtn_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
