<UserControl x:Class="ProgressoExpert.Controls.Data.LiveStreamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dataControls="clr-namespace:ProgressoExpert.Controls.Data.LiveStream"
             mc:Ignorable="d" >
<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <dataControls:LsTodayControl x:Name="LsTodayControl" Padding="5 0 5 0"/>
        </Grid>
        <Grid Grid.Column="1">
            <dataControls:LsCurrentMonthControl x:Name="LsCurrentMonthControl" Padding="5 0 5 0"/>
        </Grid>
</Grid>
</UserControl>
