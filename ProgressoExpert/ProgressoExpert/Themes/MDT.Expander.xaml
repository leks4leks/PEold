
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:ProgressoExpert">

    <Style x:Key="MDTExpanderleMain" TargetType="{x:Type Expander}">
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="MDTExpanderle16" TargetType="{x:Type Expander}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
    </Style>
    
    <Style x:Key="MDTExpanderle161" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
    </Style>
    
    <Style x:Key="MDTExpanderHeader" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
    </Style>


</ResourceDictionary>
