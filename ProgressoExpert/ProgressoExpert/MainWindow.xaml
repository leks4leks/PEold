<Window x:Class="ProgressoExpert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:appContols="clr-namespace:ProgressoExpert.Controls.App"
        Title="MainWindow" WindowStartupLocation="Manual" WindowState="Maximized">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Шапка -->
        <Grid Grid.Row="0">
            <appContols:HeaderControl x:Name="HeaderControl"></appContols:HeaderControl>
        </Grid>

        <!-- Меню -->
        <Grid Grid.Row="1">
            <appContols:MenuControl></appContols:MenuControl>
        </Grid>

        <!-- Контент -->
        <Grid Grid.Row="2">

        </Grid>
    </Grid>
</Window>
